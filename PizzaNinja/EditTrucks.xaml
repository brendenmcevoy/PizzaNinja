<Window x:Class="PizzaNinja.EditTrucks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaNinja"
        mc:Ignorable="d"
        Title="EditTrucks" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        MouseDown="Window_MouseDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="105"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Button x:Name="CloseButton"
                Grid.Column="7"
                Grid.Row="0"
                Width="20"
                Height="20"
                Content="X"
                FontFamily="Verdana"
                FontWeight="Bold"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="CloseButton_Click"/>
        <Button x:Name="MaxButton"
                Grid.Column="6"
                Grid.Row="0"
                Width="20"
                Height="20"
                Content="[]"
                FontFamily="Verdana"
                FontWeight="Bold"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="MaxButton_Click"/>
        <Button x:Name="MinimizeButton"
                Grid.Column="5"
                Grid.Row="0"
                Width="20"
                Height="20"
                Content="-"
                FontFamily="Verdana"
                FontWeight="Bold"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="MinimizeButton_Click"/>
        <ListView x:Name="TruckList"
                  Grid.Column="4"
                  Grid.Row="1"
                  Grid.RowSpan="7"
                  BorderBrush="Black"
                  BorderThickness="2"
                  Initialized="TruckList_Initialized">
            <ListView.View>
                <GridView ColumnHeaderToolTip="Truck Information">
                    <GridViewColumn DisplayMemberBinding="{Binding Path=TruckId}"
                                    Header="Id"
                                    Width="40"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}"
                                    Header="Name"
                                    Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Add Truck"
               Grid.Column="1"
               Grid.ColumnSpan="2"
               Grid.Row="1"
               Height="45"
               Width="210"
               HorizontalContentAlignment="Center"
               FontSize="28"
               FontWeight="Bold"
               Margin="20,0,0,0"/>
        <Label Content="Name:"
               FontSize="20"
               Grid.Column="1"
               Grid.Row="3"
               HorizontalContentAlignment="Right"/>
        <TextBox x:Name="NameBox"
                 Grid.Column="2"
                 Grid.Row="3"
                 Height="30"
                 Width="200"
                 HorizontalAlignment="Left"/>
        <Button x:Name="AddButton"
                Content="Add Truck"
                FontSize="14"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Grid.Row="7"
                Height="50"
                Width="105"
                Margin="0,0,110,0"
                Click="AddButton_Click"/>
        <Button x:Name="RemoveButton"
                Content="Remove Truck"
                FontSize="14"
                Grid.Column="2"
                Grid.Row="7"
                Height="50"
                Width="120"
                HorizontalAlignment="Right"
                Margin="0,0,10,0"
                Click="RemoveButton_Click"/>
    </Grid>
</Window>
