<Window x:Class="PizzaNinja.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaNinja"
        mc:Ignorable="d"
        Title="LogIn" 
        Height="400"
        Width="500"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style x:Key="Carter" TargetType="TextBox">
            <Setter Property="FontFamily" 
                    Value="Fonts/CarterOne.ttf #Carter One"/>
        </Style>
    </Window.Resources>
    <Border Background="#515052"
                BorderBrush="#000103"
                BorderThickness="3"
                CornerRadius="8,8,8,8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button x:Name="CloseButton"
                    Grid.Column="4"
                    Grid.Row="0"
                    Width="20"
                    Height="20"
                    Content="X"
                    FontFamily="Verdana"
                    FontWeight="Bold"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="CloseButton_Click"/>


            <Button x:Name="MinimizeButton"
                    Grid.Column="3"
                    Grid.Row="0"
                    Content="-"
                    FontFamily="Verdana"
                    FontWeight="Bold"
                    VerticalContentAlignment="Center"
                    Width="18"
                    Height="18"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="MinimizeButton_Click"/>


            <StackPanel Grid.Column="1" 
                        Grid.Row="1">
                <Image Source="/Images/LSP.png"
                   Height="200"/>
                
                <TextBox x:Name="UsernameBox"
                         Text="Username"
                         Style="{StaticResource Carter}"
                         Height="30"
                         Width="200"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         FontWeight="ExtraLight"
                         BorderThickness="2"
                         Background="#F7F7FF"
                         BorderBrush="#000000"
                         GotFocus="UsernameBox_GotFocus"/>
                
                <PasswordBox x:Name="PasswordBox"
                             Password="password"
                             PasswordChar="*"
                             Height="30"
                             Width="200"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             BorderThickness="2"
                             Margin="0,20,0,0"
                             Background="#F7F7FF"
                             BorderBrush="#000000"
                             GotFocus="PasswordBox_GotFocus"/>

                <Button x:Name="LoginButton"
                        Margin="0,20,0,0"
                        Content="Log In"
                        Click="LoginButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" 
                                    Value="#F7F7FF"/>
                            <Setter Property="Foreground"
                                    Value="#000000"/>
                            <Setter Property="FontFamily" 
                                    Value="/Fonts/CarterOne.ttf #Carter One"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" 
                                            Value="#333138"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="80" Height="40"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" 
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</Window>
